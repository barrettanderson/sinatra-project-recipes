<h1>Edit <%= @recipe.name %></h1>

<form action="/recipes/<%= @recipe.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <br>
    <div>
        <label for="name">Edit the Recipe's Name:</label>
        <input type="text" name="recipe[name]" id="name" value="<%= @recipe.name %>">
    </div>
    <br>
    <br>
    <div>
        <label for="ingredients">Edit the Ingredients:</label>
        <input type="text" name="recipe[ingredients]" id="ingredients" value="<%= @recipe.ingredients %>">
    </div>
    <br>
    <input type="submit" value="Update Recipe">

</form>